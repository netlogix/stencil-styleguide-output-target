{
  "name": "@netlogix/stencil-styleguide-output-target",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A stencil output target which also builds Pattern Lab and processes scss",
  "main": "dist/output-target.js",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "build:dev": "tsc --build --clean && tsc --build --watch",
    "format": "prettier --write '**/*.ts'",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netlogix/stencil-styleguide-output-target.git "
  },
  "peerDependencies": {
    "@stencil/core": "^4.12.0",
    "@pattern-lab/core": "^6.1.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "rollup": "^4.9.6",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "devDependencies": {
    "@stencil/core": "^4.12.1",
    "@types/node": "^20.11.17",
    "prettier": "^3.2.5",
    "typescript": "^5.1"
  }
}
